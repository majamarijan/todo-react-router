generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model todos {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  completed Boolean
  createdAt String
  priority  Priority
  todo      String
  userId    Int
  updatedAt String?
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  image    String
  email    String
  user_id  Int    @unique
}

enum Priority {
  LOW
  MEDIUM
  HIGH
} 
